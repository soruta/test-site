.block.blue
    .block_support
        .container
            h1 App Support
            .block_support_content
                .block_support_form
                    input(placeholder='Full Name', type='text', name="fullname", required, class="wow bounceInLeft" data-wow-duration="1s")
                    input(placeholder='Email', type='email', name="email", required, class="wow bounceInLeft" data-wow-duration="1s" data-wow-delay=".2s")
                    input(placeholder='Phone', type="tel", name="phone", pattern="[0-9]{1}-[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}", required, class="wow bounceInLeft" data-wow-duration="1s" data-wow-delay=".4s")
                    textarea(placeholder='Message', name="message", cols="30", rows="10", class="wow bounceInLeft" data-wow-duration="1s" data-wow-delay=".6s")
                    button(type='submit', class='btn wow bounceInLeft', data-wow-duration="1s" data-wow-delay=".8s") Submit
                .block_support_contacts
                    - value = 0;
                    each block in sup_blocks
                        .block_support_contact(class=block.class+' wow bounceInDown', data-wow-duration="1s", data-wow-delay=`${value+=.2}s`)
                            i.icon(class=block.ico)
                            p !{block.text}
                .block_support_chat
                    h2(class="wow bounceInLeft" data-wow-duration="1s") Online Chat
                    img(src="/src/images/operator.png", alt="operator", class="wow bounceInLeft" data-wow-duration="1s" data-wow-delay=".2s")
                    p(class="wow bounceInLeft" data-wow-duration="1s" data-wow-delay=".4s") John Thoms
                    p.on(class="wow bounceInLeft" data-wow-duration="1s" data-wow-delay=".6s") Online
                    button(class='btn wow bounceInLeft', data-wow-duration="1s" data-wow-delay=".8s") Start Chat